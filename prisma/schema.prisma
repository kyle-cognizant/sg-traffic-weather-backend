// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Area {
  id                Int               @id @default(autoincrement())
  earliestTimestamp DateTime
  name              String            @unique
  latitude          Float
  longitude         Float
  cameras           Camera[]
  weatherForecasts  WeatherForecast[]
  updatedAt         DateTime          @updatedAt
  createdAt         DateTime          @default(now())
}

model Camera {
  id                Int           @id @default(autoincrement())
  earliestTimestamp DateTime
  cameraId          String        @unique
  latitude          Float
  longitude         Float
  cameraImages      CameraImage[]
  area              Area          @relation(fields: [areaId], references: [id])
  areaId            Int
  updatedAt         DateTime      @updatedAt
  createdAt         DateTime      @default(now())
}

model CameraImage {
  id             Int      @id @default(autoincrement())
  imageTimestamp DateTime
  imageUrl       String
  width          Int
  height         Int
  md5            String   @unique
  camera         Camera   @relation(fields: [cameraId], references: [id])
  cameraId       Int
  createdAt      DateTime @default(now())
}

model WeatherForecast {
  id                Int      @id @default(autoincrement())
  forecastTimestamp DateTime
  forecast          String
  area              Area     @relation(fields: [areaId], references: [id])
  areaId            Int
  createdAt         DateTime @default(now())

  @@unique([forecastTimestamp, areaId], name: "forecastTimestamp_areaId")
}

model Transactions {
  id             Int      @id @default(autoincrement())
  queryTimestamp DateTime
  type           String
  params         Json
  createdAt      DateTime @default(now())
}
